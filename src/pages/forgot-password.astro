---
import Layout from "../layouts/Layout.astro";
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from "../components/ui/card";
import { ForgotPasswordForm } from "../components/auth/ForgotPasswordForm";

export const prerender = false;
---

<Layout title="Zapomniałeś hasła - 10xdevsFishcards">
  <main class="min-h-screen flex items-center justify-center p-4 bg-muted/30">
    <div class="w-full max-w-md">
      <Card>
        <CardHeader>
          <CardTitle>Zresetuj hasło</CardTitle>
          <CardDescription> Podaj swój adres e-mail, aby otrzymać link do resetowania hasła </CardDescription>
        </CardHeader>
        <CardContent>
          <ForgotPasswordForm client:load />
        </CardContent>
      </Card>
    </div>
  </main>
</Layout>
